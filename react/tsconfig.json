{
  "compilerOptions": {
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2017",
    "skipLibCheck": true,
    "strict": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["./**/*.tsx", "./typings", "./typings.d.ts"],
  "exclude": ["node_modules"]
}
